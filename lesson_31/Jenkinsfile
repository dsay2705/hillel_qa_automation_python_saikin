pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''#!/bin/bash
set -euxo pipefail
apt-get update
apt-get install -y wget unzip python3 python3-dev python3-pip python3.13-venv fonts-liberation libu2f-udev libvulkan1 libnss3 libgconf-2-4 libxi6 libgconf-2-4 libxss1 libappindicator3-1 libasound2

# Install Google Chrome
wget -O /tmp/google-chrome.deb https://dl.google.com/linux/direct/google-chrome-stable_current_amd64.deb
apt-get install -y /tmp/google-chrome.deb || apt-get -f install -y
google-chrome --version

# Install matching ChromeDriver
CHROME_VERSION=$(google-chrome --version | grep -oP '\d+\.\d+\.\d+' | head -1)
CHROMEDRIVER_VERSION=$(wget -qO- "https://chromedriver.storage.googleapis.com/LATEST_RELEASE_${CHROME_VERSION}")
wget -O /tmp/chromedriver.zip "https://chromedriver.storage.googleapis.com/${CHROMEDRIVER_VERSION}/chromedriver_linux64.zip"
unzip /tmp/chromedriver.zip -d /usr/local/bin/
chmod +x /usr/local/bin/chromedriver
chromedriver --version

rm -rf venv
python3 -m venv venv'''
            }
        }
        stage('Install requirements') {
            steps {
                sh '''#!/bin/bash
source venv/bin/activate
pip install -r lesson_31/requirements.txt
pip install allure-pytest'''
            }
        }
        stage('Run tests') {
            steps {
                sh '''#!/bin/bash
source venv/bin/activate
pytest lesson_31/tests --maxfail=1 --disable-warnings --tb=short --alluredir=lesson_31/allure-results'''
            }
        }
    }
    post {
        always {
            junit '**/test-results.xml'
            archiveArtifacts artifacts: '**/test-results.xml', allowEmptyArchive: true
            script {
                sh '''#!/bin/bash
source venv/bin/activate
pip install allure-commandline || true
allure generate lesson_31/allure-results --clean -o lesson_31/allure-report || true'''
            }
            archiveArtifacts artifacts: 'lesson_31/allure-report/**', allowEmptyArchive: true
            emailext (
                to: 'saydanya@gmail.com',
                subject: "Jenkins Pipeline: ${currentBuild.fullDisplayName} - ${currentBuild.currentResult}",
                body: """Pipeline finished with status: ${currentBuild.currentResult}\nSee details at: ${env.BUILD_URL}"""
            )
        }
    }
}
