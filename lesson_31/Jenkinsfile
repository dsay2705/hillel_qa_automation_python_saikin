pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                sh '''#!/bin/bash
set -euxo pipefail
apt-get update
apt-get install -y \
    wget \
    gnupg \
    unzip \
    curl \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnspr4 \
    libnss3 \
    libpango-1.0-0 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    lsb-release \
    xdg-utils \
    libatspi2.0-0 \
    libcurl4 \
    libxkbcommon0 \
    libudev1 \
    libvulkan1
rm -f /usr/share/keyrings/google-chrome.gpg
curl -fsSL https://dl.google.com/linux/linux_signing_key.pub | gpg --dearmor -o /usr/share/keyrings/google-chrome.gpg
echo "deb [arch=amd64 signed-by=/usr/share/keyrings/google-chrome.gpg] http://dl.google.com/linux/chrome/deb/ stable main" > /etc/apt/sources.list.d/google-chrome.list
apt-get update && apt-get install -y google-chrome-stable
apt-get update
apt-get install -y python3 python3-dev python3-pip python3.13-venv
rm -rf venv
python3 -m venv venv'''
            }
        }
        stage('Install requirements') {
            steps {
                sh 'pip3 install -r lesson_31/requirements.txt'
                sh 'pip3 install allure-pytest'
            }
        }
        stage('Run tests') {
            steps {
                sh 'pytest lesson_31/tests --maxfail=1 --disable-warnings --tb=short --alluredir=lesson_31/allure-results'
            }
        }
    }
    post {
        always {
            junit '**/test-results.xml'
            archiveArtifacts artifacts: '**/test-results.xml', allowEmptyArchive: true
            script {
                sh 'pip3 install allure-commandline --user || true'
                sh '~/.local/bin/allure generate lesson_31/allure-results --clean -o lesson_31/allure-report || true'
            }
            archiveArtifacts artifacts: 'lesson_31/allure-report/**', allowEmptyArchive: true
            emailext (
                to: 'saydanya@gmail.com',
                subject: "Jenkins Pipeline: ${currentBuild.fullDisplayName} - ${currentBuild.currentResult}",
                body: """Pipeline finished with status: ${currentBuild.currentResult}\nSee details at: ${env.BUILD_URL}"""
            )
        }
    }
}
