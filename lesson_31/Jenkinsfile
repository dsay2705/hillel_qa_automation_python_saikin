pipeline {
    agent any
    
    options {
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install requirements') {
            steps {
                sh '''
docker run --rm -v "$PWD":/workspace -w /workspace/lesson_31 -u root lesson_31_test \
    bash -c "pip install --upgrade pip && pip install -r requirements.txt"
'''
            }
        }
        stage('Run tests') {
            steps {
                sh '''
docker run --rm -v "$PWD":/workspace -w /workspace/lesson_31 -u root lesson_31_test \
    bash -c "pytest tests --maxfail=1 --disable-warnings --tb=short --alluredir=allure-results"
'''
            }
        }
    }
    post {
        always {
            archiveArtifacts artifacts: 'lesson_31/allure-report/**', allowEmptyArchive: true
            emailext (
                to: 'saydanya@gmail.com',
                subject: "Jenkins Pipeline: ${currentBuild.fullDisplayName} - ${currentBuild.currentResult}",
                body: """Pipeline finished with status: ${currentBuild.currentResult}\nSee details at: ${env.BUILD_URL}"""
            )
        }
    }
}
