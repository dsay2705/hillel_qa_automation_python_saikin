pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Run Tests') {
            steps {
                sh '''
                    python3 -m venv venv
                    source venv/bin/activate
                    pip install -r lesson_31/requirements.txt
                    pytest lesson_31/test_app.py --maxfail=1 --disable-warnings -v --junitxml=results.xml
                '''
            }
        }
        stage('Publish Test Results') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    junit 'results.xml'
                }
            }
        }
    }
    post {
        always {
            emailext (
                to: 'saydanya@gmail.com',
                subject: "Jenkins Pipeline: Build ${currentBuild.fullDisplayName}",
                body: "Build result: ${currentBuild.currentResult}"
            )
        }
    }
}
